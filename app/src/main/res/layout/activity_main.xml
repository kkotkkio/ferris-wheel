<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:background="@drawable/title"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/wheel"
        android:layout_marginTop="110dp"
        android:id="@+id/wheel">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="90dp"
            android:id="@+id/yellow_car"
            android:background="@drawable/yellow_car"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="90dp"
            android:id="@+id/yellow_car_vomit"
            android:background="@drawable/yellow_car_vomit"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="38dp"
            android:id="@+id/green_car"
            android:background="@drawable/green_car"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="38dp"
            android:id="@+id/green_car_vomit"
            android:background="@drawable/green_car_vomit"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="221dp"
            android:layout_marginTop="90dp"
            android:id="@+id/sky_car"
            android:background="@drawable/sky_car"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="221dp"
            android:layout_marginTop="90dp"
            android:id="@+id/sky_car_vomit"
            android:background="@drawable/sky_car_vomit"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="222dp"
            android:layout_marginTop="192dp"
            android:id="@+id/violet_car"
            android:background="@drawable/violet"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="222dp"
            android:layout_marginTop="192dp"
            android:id="@+id/violet_car_vomit"
            android:background="@drawable/violet_vomit"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="137dp"
            android:layout_marginTop="234dp"
            android:id="@+id/red_car"
            android:background="@drawable/red_car"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="137dp"
            android:layout_marginTop="234dp"
            android:id="@+id/red_car_vomit"
            android:background="@drawable/red_car_vomit"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="192dp"
            android:id="@+id/orange_car"
            android:background="@drawable/orange_vomit"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="192dp"
            android:id="@+id/orange_car_vomit"
            android:background="@drawable/orange_car_vomit"
            android:visibility="gone"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="244dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pillar">
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginBottom="50dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:id="@+id/start_btn"
                android:background="@drawable/start_btn"/>
            <ImageView
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:background="@drawable/stop_btn"
                android:id="@+id/stop_btn"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/arrow_down"
                    android:background="@drawable/arrow_down"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/speed"
                    android:text="1"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/arrow_up"
                    android:background="@drawable/arrow_up"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>